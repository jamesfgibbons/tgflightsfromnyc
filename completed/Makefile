# SERP Loop Radio MVP Makefile
.PHONY: help install dev test clean sample run deploy

# Default Python and pip commands
PYTHON := python3
PIP := pip3
VENV := .venv

# Help target
help:
	@echo "ğŸµ SERP Loop Radio MVP - Available Commands:"
	@echo ""
	@echo "Setup & Development:"
	@echo "  make install     - Install dependencies in virtual environment"
	@echo "  make dev         - Start local development environment"
	@echo "  make test        - Run tests with coverage"
	@echo "  make clean       - Clean temporary files and cache"
	@echo ""
	@echo "Audio Generation:"
	@echo "  make sample      - Generate sample audio from test data"
	@echo "  make run         - Run daily SERP collection and audio generation"
	@echo "  make preview     - Create preview from existing CSV"
	@echo ""
	@echo "Live Streaming (Phase 2):"
	@echo "  make live-setup  - Setup live streaming environment"
	@echo "  make live-dev    - Start live streaming in development mode"
	@echo "  make live-stop   - Stop live streaming services"
	@echo "  make live-test   - Test complete live system"
	@echo "  make test-publisher - Stream sample data for testing"
	@echo "  make test-stations  - Test station-specific events"
	@echo ""
	@echo "Production Deployment (Phase 3):"
	@echo "  make deploy-phase3  - Complete production deployment pipeline"
	@echo "  make deploy-server  - Deploy to production server"
	@echo "  make build-frontend - Build React app for production"
	@echo "  make deploy-frontend-rsync - Upload frontend via rsync"
	@echo "  make create-env-production - Create production environment file"
	@echo ""
	@echo "Testing & Validation:"
	@echo "  make smoke-test     - Full end-to-end smoke test"
	@echo "  make test-e2e       - Run Cypress tests"
	@echo "  make production-checklist - Production readiness validation"
	@echo "  make health-check   - Test API health endpoint"
	@echo "  make test-cors      - Validate CORS configuration"
	@echo ""
	@echo "Deployment:"
	@echo "  make deploy      - Deploy to AWS Lambda"
	@echo "  make docker      - Build Docker image"
	@echo ""
	@echo "Utilities:"
	@echo "  make check-deps  - Check audio dependencies (FluidSynth, etc.)"
	@echo "  make lint        - Run code linting"

# Install dependencies
install:
	@echo "ğŸ“¦ Setting up Python virtual environment..."
	$(PYTHON) -m venv $(VENV)
	@echo "ğŸ“¦ Installing dependencies..."
	$(VENV)/bin/pip install --upgrade pip
	$(VENV)/bin/pip install -r requirements.txt
	@echo "âœ… Installation complete! Activate with: source $(VENV)/bin/activate"

# Development setup
dev: install
	@echo "ğŸ”§ Setting up development environment..."
	@if [ ! -f .env ]; then \
		echo "ğŸ“ Creating .env from template..."; \
		cp .env.template .env || echo "âš ï¸  Please create .env file manually"; \
	fi
	@echo "ğŸµ Development setup complete!"
	@echo "ğŸ’¡ Next steps:"
	@echo "   1. Edit .env with your API credentials"
	@echo "   2. Run 'make sample' to test audio generation"
	@echo "   3. Run 'make run' for full pipeline"

# Run tests
test:
	@echo "ğŸ§ª Running tests with coverage..."
	$(VENV)/bin/python -m pytest tests/ -v --cov=src --cov-report=html --cov-report=term-missing
	@echo "ğŸ“Š Coverage report generated in htmlcov/"

# Generate sample audio
sample:
	@echo "ğŸµ Generating sample audio..."
	$(VENV)/bin/python -m src.cli sample
	@echo "ğŸ§ Sample complete! Check /tmp/sample.mp3"

# Run daily pipeline
run:
	@echo "ğŸš€ Running daily SERP Loop Radio pipeline..."
	$(VENV)/bin/python -m src.cli run-daily

# Create preview from CSV
preview:
	@echo "ğŸ¼ Creating audio preview..."
	@if [ -f data/sample.csv ]; then \
		$(VENV)/bin/python -m src.cli local-preview data/sample.csv --play; \
	else \
		echo "âŒ No sample.csv found. Create one first or run 'make run'"; \
	fi

# Check audio dependencies
check-deps:
	@echo "ğŸ” Checking audio dependencies..."
	@echo "FluidSynth: $$(which fluidsynth || echo 'âŒ Not installed')"
	@echo "FFmpeg: $$(which ffmpeg || echo 'âŒ Not installed')"
	@echo ""
	@echo "ğŸ“¦ Installation hints:"
	@echo "  macOS: brew install fluidsynth ffmpeg"
	@echo "  Ubuntu: sudo apt-get install fluidsynth ffmpeg"

# Lint code
lint:
	@echo "ğŸ” Running code linting..."
	$(VENV)/bin/ruff check src/
	$(VENV)/bin/ruff format src/ --diff

# Clean temporary files
clean:
	@echo "ğŸ§¹ Cleaning temporary files..."
	find . -type f -name "*.pyc" -delete
	find . -type d -name "__pycache__" -delete
	find . -type d -name "*.egg-info" -exec rm -rf {} +
	rm -rf .pytest_cache htmlcov/ .coverage
	rm -f /tmp/serp_*.mid /tmp/serp_*.mp3 /tmp/serp_*.wav /tmp/sample.*
	@echo "âœ… Cleanup complete!"

# Build Docker image
docker:
	@echo "ğŸ³ Building Docker image..."
	docker build -f docker/Dockerfile -t serp-loop-radio .
	@echo "âœ… Docker image built: serp-loop-radio"

# Deploy to AWS (placeholder)
deploy:
	@echo "ğŸš€ Deploying to AWS..."
	@echo "ğŸš§ Lambda deployment not yet implemented in MVP"
	@echo "ğŸ’¡ For now, run the Docker image or use the CLI directly"

# Bootstrap everything
bootstrap: install check-deps sample
	@echo "ğŸ‰ Bootstrap complete!"
	@echo "ğŸµ SERP Loop Radio is ready to use!"

# End-to-end test
e2e: bootstrap
	@echo "ğŸ”„ Running end-to-end test..."
	@if [ -f data/sample.csv ]; then \
		make preview; \
		echo "ğŸŒ Opening audio player..."; \
		open /tmp/preview.mp3 2>/dev/null || echo "ğŸ§ Play /tmp/preview.mp3 to hear your SERP data!"; \
	else \
		echo "âš ï¸  No sample data found. Run 'make run' first to collect SERP data."; \
	fi

# ====== Phase 2: Live Streaming Commands ======

live-setup:
	@echo "ğŸ”§ Setting up live streaming environment..."
	@command -v docker >/dev/null 2>&1 || { echo "âŒ Docker required but not installed"; exit 1; }
	@command -v docker-compose >/dev/null 2>&1 || { echo "âŒ Docker Compose required but not installed"; exit 1; }
	cd ui && npm install

live-dev:
	@echo "ğŸµ Starting SERP Loop Radio Live (development mode)..."
	docker-compose -f docker/docker-compose.yml up --build

live-stop:
	@echo "â¹ï¸ Stopping live streaming services..."
	docker-compose -f docker/docker-compose.yml down

live-logs:
	@echo "ğŸ“‹ Viewing live streaming logs..."
	docker-compose -f docker/docker-compose.yml logs -f

redis-cli:
	@echo "ğŸ”´ Opening Redis CLI..."
	docker-compose -f docker/docker-compose.yml exec redis redis-cli

test-websocket:
	@echo "ğŸ§ª Testing WebSocket functionality..."
	$(VENV)/bin/python -m pytest tests/test_websocket.py -v

publisher-once:
	@echo "ğŸ“¡ Running publisher once..."
	$(VENV)/bin/python -m src.publisher --once

publisher-once-live:
	@echo "ğŸ“¡ Running publisher once with live data..."
	$(VENV)/bin/python -m src.publisher --once --live

publisher-continuous:
	@echo "ğŸ“¡ Starting continuous publisher..."
	$(VENV)/bin/python -m src.publisher

publisher-continuous-live:
	@echo "ğŸ“¡ Starting continuous publisher with live data..."
	$(VENV)/bin/python -m src.publisher --live

test-publisher:
	@echo "ğŸ§ª Starting test publisher with sample data..."
	$(VENV)/bin/python -m src.test_publisher --mode stream --simulate-changes

test-publisher-batch:
	@echo "ğŸ“¦ Publishing all sample data..."
	$(VENV)/bin/python -m src.test_publisher --mode batch

test-stations:
	@echo "ğŸ“» Testing station-specific events..."
	$(VENV)/bin/python -m src.test_publisher --mode stations

live-test:
	@echo "ğŸµ Testing complete live system..."
	@echo "Starting services..."
	docker-compose -f docker/docker-compose.yml up -d
	@echo "Waiting for services to be ready..."
	sleep 10
	@echo "Running tests..."
	$(MAKE) test-websocket
	@echo "Stopping services..."
	docker-compose -f docker/docker-compose.yml down

# ====== Phase 2.5: Production Readiness Commands ======

health-check:
	@echo "ğŸ” Testing health endpoint..."
	curl -f http://localhost:8000/health | jq '.' || echo "âŒ Health check failed"

test-cors:
	@echo "ğŸ›¡ï¸ Testing CORS policy..."
	@echo "Testing unauthorized origin..."
	curl -H "Origin: https://unauthorized-domain.com" -I http://localhost:8000/health 2>/dev/null | grep -q "Access-Control-Allow-Origin" && echo "âŒ CORS allows unauthorized origin" || echo "âœ… CORS blocks unauthorized origin"

test-rate-limit:
	@echo "âš¡ Testing rate limiting..."
	@echo "Sending 25 rapid requests..."
	@(for i in $$(seq 1 25); do curl -s -o /dev/null -w "%{http_code} " http://localhost:8000/health & done; wait; echo) | grep -q "429" && echo "âœ… Rate limiting active" || echo "âš ï¸ Rate limiting not triggered"

validate-ssl:
	@echo "ğŸ”’ Validating SSL certificate..."
	@echo "Usage: make validate-ssl DOMAIN=your-domain.com"
	@if [ -z "$(DOMAIN)" ]; then echo "âŒ Please set DOMAIN=your-domain.com"; exit 1; fi
	@echo "Testing SSL connection to $(DOMAIN)..."
	openssl s_client -connect $(DOMAIN):443 -servername $(DOMAIN) -verify_return_error < /dev/null 2>/dev/null && echo "âœ… SSL certificate valid" || echo "âŒ SSL certificate invalid"

test-wss:
	@echo "ğŸ” Testing WebSocket Secure connection..."
	@echo "Usage: make test-wss WSS_URL=wss://api.your-domain.com/ws/serp API_KEY=your-token"
	@if [ -z "$(WSS_URL)" ]; then echo "âŒ Please set WSS_URL=wss://your-endpoint"; exit 1; fi
	@if [ -z "$(API_KEY)" ]; then echo "âŒ Please set API_KEY=your-token"; exit 1; fi
	@command -v wscat >/dev/null 2>&1 || { echo "âŒ Install wscat: npm install -g wscat"; exit 1; }
	@echo "Testing WSS connection..."
	timeout 10 wscat -c "$(WSS_URL)?api_key=$(API_KEY)&station=daily" -x 'ping' 2>/dev/null && echo "âœ… WSS connection successful" || echo "âŒ WSS connection failed"

test-audio-limiter:
	@echo "ğŸ”Š Testing audio limiter (prevent clipping)..."
	@echo "This requires manual verification in browser DevTools"
	@echo "1. Open browser DevTools -> Console"
	@echo "2. Connect to WebSocket endpoint"  
	@echo "3. Verify Tone.js limiter is active at -1dBFS"
	@echo "4. Check that peak meter never exceeds 0dBFS during stress test"

production-checklist:
	@echo "ğŸš¦ Production Readiness Checklist"
	@echo "=================================="
	@echo ""
	@echo "ğŸ” Automated Checks:"
	@printf "  Health endpoint: "
	@curl -s http://localhost:8000/health | jq -r '.status 2>/dev/null || echo "âŒ FAILED"' | grep -q "ok" && echo "âœ… OK" || echo "âŒ FAILED"
	@printf "  Redis connection: "
	@docker exec serp-redis redis-cli ping 2>/dev/null | grep -q "PONG" && echo "âœ… OK" || echo "âŒ FAILED"
	@printf "  Redis persistence: "
	@docker exec serp-redis redis-cli config get save 2>/dev/null | grep -q "save" && echo "âœ… OK" || echo "âŒ NOT CONFIGURED"
	@printf "  CORS configured: "
	@curl -s -H "Origin: https://unauthorized.com" -I http://localhost:8000/health 2>/dev/null | grep -q "Access-Control-Allow-Origin" && echo "âŒ TOO PERMISSIVE" || echo "âœ… OK"
	@echo ""
	@echo "ğŸ“‹ Manual Checks Required:"
	@echo "  ğŸ”’ SSL certificate: make validate-ssl DOMAIN=yourdomain.com"
	@echo "  ğŸ” WSS connection: make test-wss WSS_URL=wss://api.yourdomain.com/ws/serp API_KEY=token"
	@echo "  ğŸµ Audio limiter: make test-audio-limiter (browser verification)"
	@echo "  ğŸ“Š Frontend deployment: Lovable hosting with correct VITE_WS_URL"
	@echo "  ğŸ”‘ Environment vars: Production values in .env"
	@echo ""
	@echo "ğŸ¯ Go/No-Go Criteria:"
	@echo "  - All automated checks pass âœ…"
	@echo "  - SSL certificate valid ğŸ”’"
	@echo "  - WSS connection works ğŸ”"
	@echo "  - Audio limiter prevents clipping ğŸ”Š"
	@echo "  - Frontend connects successfully ğŸŒ"
	@echo "  - Real DataForSEO API tested ğŸ“Š"

quick-prod-test:
	@echo "âš¡ Quick Production Test Suite"
	@echo "============================="
	@$(MAKE) health-check
	@$(MAKE) test-cors
	@$(MAKE) test-rate-limit
	@echo ""
	@echo "âœ… Quick tests complete. Run 'make production-checklist' for full validation."

# ====== Phase 3: Frontend Deployment Commands ======

build-frontend:
	@echo "ğŸ—ï¸ Building React frontend for production..."
	cd ui && npm run build
	@echo "âœ… Frontend built in ui/dist/"

deploy-frontend-local:
	@echo "ğŸ“ Deploying frontend to local nginx directory..."
	@if [ ! -d "ui/dist" ]; then echo "âŒ Frontend not built. Run 'make build-frontend' first"; exit 1; fi
	sudo mkdir -p /var/www/serpradio
	sudo cp -r ui/dist/* /var/www/serpradio/
	sudo chown -R www-data:www-data /var/www/serpradio
	@echo "âœ… Frontend deployed to /var/www/serpradio"

deploy-frontend-rsync:
	@echo "ğŸš€ Deploying frontend via rsync..."
	@echo "Usage: make deploy-frontend-rsync SERVER=your-server.com USER=username"
	@if [ -z "$(SERVER)" ]; then echo "âŒ Please set SERVER=your-server"; exit 1; fi
	@if [ -z "$(USER)" ]; then echo "âŒ Please set USER=username"; exit 1; fi
	@if [ ! -d "ui/dist" ]; then echo "âŒ Frontend not built. Run 'make build-frontend' first"; exit 1; fi
	rsync -avz --delete ui/dist/ $(USER)@$(SERVER):/var/www/serpradio/
	@echo "âœ… Frontend deployed to $(SERVER)"

create-env-production:
	@echo "ğŸ” Creating production environment file..."
	@if [ -f ".env.production" ]; then echo "âš ï¸ .env.production already exists"; exit 1; fi
	cp env.production.example .env.production
	@echo "ğŸ“ Edit .env.production with your actual credentials:"
	@echo "   - DataForSEO login/password"
	@echo "   - Generate secure tokens with: openssl rand -hex 32"
	@echo "   - Set CORS_ORIGINS=https://serpradio.com"

# Combined deployment command
deploy-production:
	@echo "ğŸš€ Full Production Deployment"
	@echo "=============================="
	@$(MAKE) build-frontend
	@echo ""
	@echo "ğŸ“‹ Next steps:"
	@echo "1. Upload frontend: make deploy-frontend-rsync SERVER=159.223.153.111 USER=root"
	@echo "2. Copy nginx config: scp infra/nginx-serpradio.conf root@159.223.153.111:/etc/nginx/sites-available/serpradio"
	@echo "3. Copy production env: scp .env.production root@159.223.153.111:/opt/serpradio/"
	@echo "4. SSH to server and run deployment commands"

# ====== Phase 3: Testing & Validation ======

install-cypress:
	@echo "ğŸ“¦ Installing Cypress for end-to-end testing..."
	cd ui && npm install cypress --save-dev

test-e2e:
	@echo "ğŸ§ª Running Cypress end-to-end tests..."
	cd ui && npm run test:e2e

test-e2e-dev:
	@echo "ğŸ” Opening Cypress test runner..."
	cd ui && npm run test:e2e:dev

smoke-test:
	@echo "ğŸ’¨ Running smoke test suite..."
	@$(MAKE) live-dev &
	@sleep 30  # Wait for services to start
	@$(MAKE) test-publisher &
	@sleep 10  # Wait for test data
	cd ui && npm run test:e2e
	@$(MAKE) live-stop

# Server deployment commands
deploy-server:
	@echo "ğŸš€ Deploying to production server..."
	@echo "Usage: make deploy-server SERVER=159.223.153.111"
	@if [ -z "$(SERVER)" ]; then echo "âŒ Please set SERVER=your-ip"; exit 1; fi
	scp infra/scripts/deploy-serpradio.sh root@$(SERVER):/tmp/
	ssh root@$(SERVER) "chmod +x /tmp/deploy-serpradio.sh && /tmp/deploy-serpradio.sh"

# Full Phase 3 deployment pipeline
deploy-phase3:
	@echo "ğŸ¯ Phase 3: Complete Production Deployment"
	@echo "=========================================="
	@$(MAKE) create-env-production
	@$(MAKE) build-frontend
	@echo ""
	@echo "ğŸ” Next: Edit .env.production with your credentials"
	@echo "ğŸš€ Then: make deploy-server SERVER=159.223.153.111"
	@echo "ğŸ“Š Finally: make deploy-frontend-rsync SERVER=159.223.153.111 USER=root" 
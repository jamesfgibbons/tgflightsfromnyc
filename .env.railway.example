# SERPRadio Railway Deployment - Environment Variables
# Copy these to Railway → Service → Variables

# === SUPABASE (Required) ===
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_SERVICE_ROLE=eyJhbGciOiJIUzI1NiIsInR5cCI6IkpXVCJ9...
STORAGE_BUCKET=serpradio-artifacts
PUBLIC_STORAGE_BUCKET=serpradio-public

# === SECURITY (Required) ===
ADMIN_SECRET=generate-a-long-random-secret-string-here
CORS_ORIGINS=https://your-app.lovable.dev,http://localhost:5173

# === AUDIO RENDERING ===
RENDER_MP3=1
SOUNDFONT_PATH=/usr/share/sounds/sf2/FluidR3_GM.sf2

# === CONFIGURATION PATHS ===
DESTINATION_ONTOLOGY_PATH=config/destination_ontology.yaml
VIBE_PALETTES_PATH=config/vibe_palettes.yaml
VIBE_RULES_PATH=config/vibe_rules.yaml

# === AI PROVIDERS (Optional) ===
# OpenAI (for vision, text analysis)
OPENAI_API_KEY=sk-...
OPENAI_TEXT_MODEL=gpt-4o-mini
OPENAI_VISION_MODEL=gpt-4o-mini

# xAI Grok (preferred for daily pipelines)
XAI_API_KEY=xai-...
XAI_MODEL=grok-beta

# Groq (alternative)
GROQ_API_KEY=gsk_...
GROQ_TEXT_MODEL=llama-3.1-8b-instant
GROQ_VISION_MODEL=llama-3.2-11b-vision-preview

# === SERVER (Railway auto-sets PORT) ===
PORT=8000
APP_VERSION=1.0.0

# === OPTIONAL: Spotify Integration (for VibeNet) ===
VIBE_USE_SPOTIFY=0
SPOTIFY_CLIENT_ID=
SPOTIFY_CLIENT_SECRET=

# === OPTIONAL: Intake Authentication ===
INTAKE_TOKEN=your-intake-token-here

# === OPTIONAL: Rate Limiting ===
RL_IP_PER_MIN=60
RL_TENANT_PER_MIN=120

# === OPTIONAL: Presigned URL TTL ===
PRESIGNED_URL_TTL=600
TTL_DAYS=7

# === OPTIONAL: Board Feed Dataset Override ===
BOARD_DATASET_PATH=data/grok_tips_inspiration_dataset.json

# === OPTIONAL: LLM Cache Settings ===
LLM_CACHE_DIR=serpradio_convo_cache
LLM_CACHE_TTL_HOURS=24

# === OPTIONAL: Webz.io Firehose ===
WEBZIO_API_TOKEN=
WEBZIO_FIREHOSE_URL=https://webz.io/fhose
WEBZIO_FILTER=site_type:news language:english
